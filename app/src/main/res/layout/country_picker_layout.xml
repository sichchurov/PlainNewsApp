<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_sheet_back"
    android:maxHeight="300dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <ImageButton
        android:id="@+id/choose_country"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/bottomsheetbehavior_bt"
        android:src="@drawable/expnadable_bar"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck,ImageContrastCheck" />

    <TextView
        android:id="@+id/tv_choose_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:color="?attr/Heading_color"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:text="@string/choose_country"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@id/choose_country" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/country_picker_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/tv_choose_country" />


</androidx.constraintlayout.widget.ConstraintLayout>